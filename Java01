/*
Exercice 2
 */
public class Intercambio {
   public static void main(String[] args) {
   //declaro dos variables
       int a = 4; 
       int b = 7; 
   System.out.println("valor de a = "+a);
   System.out.println("valor de b = "+b);
  int c = a; //valor c es 4
  a = b; //valor a es 7, valor de b es 7, valor de c es 4
  b = c; //valor de a es 7, valor de b es 4, valor de c es 4
  System.out.println("valor de a = "+a);
   System.out.println("valor de b = "+b);
   }
}
